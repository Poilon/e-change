<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <%= f.input :email, label: t('email'),required: true, autofocus: true, wrapper: :vertical_input_group %>
    <%= f.input :password, label: t('password'), required: true, wrapper: :vertical_input_group, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, label: t('password_confirmation'), required: true, wrapper: :vertical_input_group %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, t('sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
